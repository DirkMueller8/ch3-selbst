@model IEnumerable<ch3_selbst.Models.GuestResponse>
@{
    Layout = null; 
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width-devicetype-width">
        <title>Party</title>
    </head>
    <body>
        <h2>Here is the list of attendees</h2>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ch3_selbst.Models.GuestResponse r in Model!)
                {
                    <tr>
                        <td>@r.Name</td>
                        <td>@r.Email</td>
                        <td>@r.Phone</td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
</html>